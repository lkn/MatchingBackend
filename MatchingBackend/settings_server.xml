<!-- sorry but I only handle landscape images =] -->

<settings>
	<query>
		<!-- parameters to cvSurfParam -->
		<surf>
			<hessian_threshold>2000</hessian_threshold>
			<extended_parameter>0</extended_parameter>
		</surf>
		
		<!-- pixel sizes -->
		<image>
			<width>216</width>
			<height>144</height>
		</image>
		
	</query>
	
	<!-- config is used by the python script to populate the database -->
	<library path="database/kt.db" config="data/kt_library/index.xml">
		<!-- parameters to cvSurfParam -->
		<surf>
			<hessian_threshold>2000</hessian_threshold>
			<extended_parameter>0</extended_parameter>
		</surf>
		
		<!-- pixel sizes -->
		<image>
			<width>534</width>
			<height>356</height>
		</image>
		
		<!-- double for percentage -->
		<match_threshold>15</match_threshold>
	</library>
	
	<!-- if empty, then logger uses default file name ({date}.txt) -->
	<log name="" />
	
	<connection port="1111" num_clients="5" />
</settings>
