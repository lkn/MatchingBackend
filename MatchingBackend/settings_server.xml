<!-- sorry but I only handle landscape images =] -->

<settings>
	<query>
		<!-- parameters to cvSurfParam -->
		<surf>
			<hessian_threshold>2000</hessian_threshold>
			<extended_parameter>0</extended_parameter>
		</surf>
		
		<!-- pixel sizes -->
		<image>
			<width>320</width>
			<height>240</height>
		</image>
		
	</query>
	
	<!-- config is used by the python script to populate the database -->
	<library path="database/kt-min.db" config="data/kt_library/index-min.xml">
		<!-- parameters to cvSurfParam -->
		<surf>
			<hessian_threshold>2000</hessian_threshold>
			<extended_parameter>0</extended_parameter>
		</surf>
		
		<!-- pixel sizes -->
		<image>
			<width>320</width>
			<height>240</height>
		</image>
		
		<!-- double for percentage -->
		<match_threshold>20</match_threshold>
	</library>
	
	<!-- if empty, then logger uses default file name ({date}.txt) -->
	<log name="" />
	
	<connection port="1112" num_clients="5" />
</settings>
